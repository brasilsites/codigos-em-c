    cores=[]
    qtdcores=int(input("Informe a quantidade de cores: "))
    for i in range (qtdcores):
        cores.append(input("Informe a "+str(i+1)+"a cor: "))

    vermelho=cores.index("vermelho")

    if (vermelho):
        confirma=input("Deseja remover a cor vermelha? (s/n)")
    if (confirma=="s"):
        cores.remove("vermelho")

    print(cores)
